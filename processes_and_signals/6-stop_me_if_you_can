#!/usr/bin/env bash
#bash script that kills 4-to_infinity_and_beyond process easily
pkill -f to_infinity_and_beyond
#!/usr/bin/env bash
#bash script that displays 'To infinty and beyond', if kill attempt.
trap 'echo "I am invincible!!!"' SIGTERM
counter=2
while [ $counter -gt 0 ]; do
	echo "To infinity and beyond"
	sleep 2
done
